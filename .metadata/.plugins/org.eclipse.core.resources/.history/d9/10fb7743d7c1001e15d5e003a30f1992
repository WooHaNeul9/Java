package JavaStudyTwo;

public class Study {

	public static void main(String[] args) {
		
		int sum = 0;
		
		for (int i = 0; i <= 100; i++) {
			if(i % 2 == 0) {
				sum = sum + i;
			}
		}
		
//		for (int i = 0; i <= 100; i++) {
//			if(sum % 2 == 0) {
//				sum = sum + i;
//			}
//		} => sum % 2 == 0인 조건을 걸면 결과값으로 sum의 값 중에 짝수인 값이 나오는 것이 아니라 sum의 값 중에 나눠서 나머지가 0인 sum의 값이 출력됨
		
		System.out.println(sum);
		
		
		for (int i = 0; i < 7; i++) {
			
			for (int j = 0; j < 7 - i; j++) {
				System.out.println(" ");
			}
			
			for (int z = 0; z < i+1; z++) {
				System.out.println("*");
			}
			
		}
		
		
	}

}
